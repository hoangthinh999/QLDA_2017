<style>
    td.logout button:hover {
        transition:0.8s;
        box-shadow:1px 1px 1px 1px #00ff95;
    }
</style>
<table border="0" style="width: 100%;">
@using (Html.BeginForm("AuthPassed","Admin",FormMethod.Post))
{ 
    @Html.ValidationSummary(true)
    <tr>
        <td style="height: 50px"><div style="width: 100%;text-align: center;font-family: benxuan;font-size: 25px;">Xin chào!</div></td>
    </tr>

    <tr>
        <td style="height: 100px"><div style="text-align: center;width: 100%;font-size: 40px;font-family: benxuan;color:#00ff96;">@HttpContext.Current.Session["adminusername"].ToString()</div></td>
    </tr>

    <tr>
        <td class="logout" style="height: 50px;"><button style="width:80%;margin-left:10%;border-radius:15px;height:30px" name="button" value="logout" type="submit">Đăng Xuất</button></td>
    </tr>
}
</table>
