@using DALTWEB_110HN.Models
@using PagedList.Mvc
@model PagedList.PagedList<DONDATHANG>

@{
    ViewBag.Title = "DonDatHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    table.ddh {
        font-family: 'Times New Roman';
        font-size: 20px;
        width: 98%;
        margin-left: 1%;
        margin-top: 30px;
    }
</style>
<table class="ddh" border="1">
    <tr>
        <th>
            idDDH
        </th>
        <th>
            ngayxuatDDH
        </th>
        <th>
            tonggiatri
        </th>
        <th>
            idKhach
        </th>
        <th>
           idKM
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.idDDH
        </td>
        <td>
            @item.ngayxuatDDH
        </td>
        <td>
            @item.tonggiatri
        </td>
        <td>
            @item.idKhach
        </td>
        <td>
            @item.idKM
        </td>
        <td>
            @Html.ActionLink("Edit", "editDonDatHang", new {id = item.idDDH }) |
            @Html.ActionLink("Delete", "deleteDonDatHang", new { id = item.idDDH })
        </td>
    </tr>
}

</table>
<div style="font-family:benxuan;font-size:25px;color:white;">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount</div>
<div class="index-select">
    @Html.PagedListPager(Model, Page => Url.Action("DonDatHang", new { page = Page }))
</div>
<style>
    div.index-select ul {
        width: 50%;
        text-align: center;
    }

    div.index-select li {
        float: left;
        display: inline;
        margin: 3px;
        box-shadow: 1px 1px 1px 1px black;
        width: 30px;
        text-align: center;
        border-radius: 5px;
        height: 30px;
    }

        div.index-select li:hover {
            cursor: pointer;
            transition: 0.4s;
            background-color: #ff195f;
        }

        div.index-select li a {
            color: white;
            font-family: 'UVN Ben Xuan';
            font-size: 30px;
            text-decoration: none;
            width: 30px;
            height: 30px;
        }
</style>