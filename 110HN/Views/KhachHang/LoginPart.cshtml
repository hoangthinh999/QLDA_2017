<style>
    table.login-part {
        width:100%;
    }
        table.login-part tr {
            height:40px;
        }
        table.login-part input {
            height: 30px;
            margin-top:5px;
            border-radius:10px;
            opacity:0.5;
        }
        table.login-part input:hover {
            transition:0.6s;
            opacity: 1.0;
            box-shadow:1px 1px 1px 1px #ff195f;
        }
        table.login-part input#btn {
            background-color:#ff195f;
            color:white;
            opacity:0.75;
            }
    div.login-part {
        margin-bottom : 30px;
    }
</style>
<div class="login-part">
    @using (Html.BeginForm("LoginPart", "KhachHang", null, FormMethod.Post))
    { 
    <table class="login-part">
        <tr>
            <td>Tài khoản</td>
            <td style="width:70%"><input type="text" name="id" /></td>
            <td style="width:0px"></td>
        </tr>
        <tr>
            <td>Mật khẩu</td>
            <td style="width:70%"><input type="password" name="pwd" /></td>
            <td style="width:0px"></td>
        </tr>
        <tr>
            <td style="width:20%"></td>
            <td style="width:60%"><input id="btn" type="submit" name="login" value="Đăng nhập" /></td>
            <td style="width:20%"></td>
        </tr>
    </table>
    }
</div>
<a style="margin-bottom:20px;width: 80%;font-size:24px;color:white;text-align:left" href="@Url.Action("Register","KhachHang")">Chưa có tài khoản ? Đăng ký miễn phí ngay.</a>